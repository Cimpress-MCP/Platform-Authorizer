{
  "name": "platform-authorizer",
  "license": "Apache-2.0",
  "private": true,
  "description": "A lambda authorizer for AWS API Gateway for Auth0-integrated services.",
  "author": {
    "email": "fulfillerenablement@cimpress.com",
    "name": "Fulfiller Enablement"
  },
  "engines": {
    "node": ">=10.15"
  },
  "scripts": {
    "bundle": "webpack",
    "test": "jest"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:promise/recommended",
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "ecmaFeatures": {
        "impliedStrict": true
      },
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "no-console": "off",
      "no-process-env": "off"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10.15"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.0",
    "jwks-rsa": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.0",
    "babel-loader": "^8.0.0",
    "babel-minify-webpack-plugin": "^0.3.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.17.0",
    "eslint-plugin-node": "^9.0.0",
    "eslint-plugin-promise": "^4.1.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.0"
  }
}
